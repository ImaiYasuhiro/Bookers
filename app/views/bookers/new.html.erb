  <% if flash[:notice] %>
      <div class= "flash">
        <%= flash[:notice] %>
      </div>
  <% end %>

<h1>Books</h1>
<table>
　<tr>
　　<th>Title</th>
　　<th>Body</th>
   <th></th>
   <th></th>
   <th></th>
　</tr>

　　<% @bookers.each do |booker| %>
   <tr>
   <td><%= booker.title %></td>
   <td><%= booker.body %></td>
   <td><%= link_to "show", booker_path(booker.id) %></td>
   <td><%= link_to "edit", edit_booker_path(booker.id) %></td>
   <td><%= link_to "destroy", booker_path(booker.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
   </tr>
   <% end %>
</table>

<h1>New book</h1>
<!-- form_for部分 -->
<%= form_for(@booker) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <p><%= f.text_area :body %></p>

    <%= f.submit 'create Books' %>

<% end %>
