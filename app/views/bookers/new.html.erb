  <% if flash[:notice] %>
      <div class= "flash">
        <%= flash[:notice] %>
      </div>
  <% end %>

<h1>Books</h1>
<table>
　<tr>
　　<th>Title</th>
　　<th>Body</th>
   <th></th>
   <th></th>
   <th></th>
　</tr>

　　<% @bookers.each do |booker| %>
   <tr>
   <td><%= booker.title %></td>
   <td><%= booker.body %></td>
   <td><%= link_to "Show", booker_path(booker.id), class: "show_#{booker.id}" %></td>
   <td><%= link_to "Edit", edit_booker_path(booker.id), class: "edit_#{booker.id}" %></td>
   <td><%= link_to "Destroy", booker_path(booker.id), class: "destroy_#{booker.id}", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
   </tr>
   <% end %>
</table>

<h1>New book</h1>
<!-- form_for部分 -->
<%= form_for(@booker) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title, class: "book_title" %>

    <h4>Body</h4>
    <p><%= f.text_area :body, class: "book_body" %></p>

    <%= f.submit 'create Books' %>

<% end %>
