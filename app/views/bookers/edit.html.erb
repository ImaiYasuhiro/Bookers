<h1>Editing Book</h1>

<%= form_for(@booker) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title, class: "book_title" %>

    <h4>Body</h4>
    <p><%= f.text_area :body, class: "book_body" %></p>

    <p><%= f.submit 'Update Books' %></p>
<% end %>

<%= link_to "Show", booker_path(@booker.id), class: "booker.id" %>
<%= link_to "Back", new_booker_path(@booker.id), class: "booker.id" %>